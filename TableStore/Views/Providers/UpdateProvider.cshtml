@{
    ViewData["Title"] = "Обновление поставщика";
}
@model Provider

<form asp-action="UpdateProvider" method="post">
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <input name="Name" class="form-control" value="@Model.Name" required/>
    </div>
    <div class="form-group">
        <label asp-for="Address">Адрес</label>
        <input name="Address" class="form-control" value="@Model.Address" required />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>